<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user.fullname %> - Portfolio</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      padding: 40px 20px;
    }

    .container {
      max-width: 1100px;
      margin: 0 auto;
      background: white;
      border-radius: 20px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      overflow: hidden;
    }

    /* Header Section */
    .header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 60px 40px;
      text-align: center;
      position: relative;
    }

    .profile-img {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      border: 5px solid white;
      object-fit: cover;
      margin-bottom: 20px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }

    .header h1 {
      font-size: 42px;
      font-weight: 700;
      margin-bottom: 10px;
    }

    .header .bio {
      font-size: 18px;
      opacity: 0.95;
      max-width: 700px;
      margin: 0 auto 30px;
      line-height: 1.6;
    }

    .contact-links {
      display: flex;
      justify-content: center;
      gap: 20px;
      flex-wrap: wrap;
    }

    .contact-links a {
      color: white;
      text-decoration: none;
      display: flex;
      align-items: center;
      gap: 8px;
      background: rgba(255, 255, 255, 0.2);
      padding: 10px 20px;
      border-radius: 25px;
      transition: all 0.3s;
    }

    .contact-links a:hover {
      background: rgba(255, 255, 255, 0.3);
      transform: translateY(-2px);
    }

    /* Content Section */
    .content {
      padding: 50px 40px;
    }

    .section {
      margin-bottom: 50px;
    }

    .section-title {
      font-size: 28px;
      font-weight: 600;
      color: #333;
      margin-bottom: 25px;
      display: flex;
      align-items: center;
      gap: 15px;
    }

    .section-title::before {
      content: '';
      width: 5px;
      height: 35px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border-radius: 3px;
    }

    /* Education Cards */
    .edu-card {
      background: #f8f9fa;
      padding: 25px;
      border-radius: 15px;
      margin-bottom: 20px;
      border-left: 4px solid #667eea;
    }

    .edu-card h3 {
      color: #667eea;
      font-size: 20px;
      margin-bottom: 10px;
    }

    .edu-card p {
      color: #555;
      margin: 5px 0;
    }

    /* Skills Grid */
    .skills-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: 15px;
    }

    .skill-tag {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 12px 20px;
      border-radius: 25px;
      text-align: center;
      font-weight: 500;
      box-shadow: 0 4px 10px rgba(102, 126, 234, 0.3);
    }

    /* Projects */
    .project-card {
      background: #f8f9fa;
      padding: 30px;
      border-radius: 15px;
      margin-bottom: 25px;
      border-top: 4px solid #667eea;
      transition: transform 0.3s, box-shadow 0.3s;
    }

    .project-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    .project-card h3 {
      color: #333;
      font-size: 22px;
      margin-bottom: 15px;
    }

    .project-card p {
      color: #666;
      line-height: 1.6;
      margin-bottom: 15px;
    }

    .project-link {
      color: #667eea;
      text-decoration: none;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: 8px;
    }

    .project-link:hover {
      text-decoration: underline;
    }

    /* Footer */
    .footer {
      background: #f8f9fa;
      padding: 30px;
      text-align: center;
      color: #666;
    }

    .footer a {
      color: #667eea;
      text-decoration: none;
      margin: 0 10px;
      font-weight: 600;
    }

    /* Download Button */
    .download-btn {
      position: fixed;
      bottom: 30px;
      right: 30px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 15px 30px;
      border-radius: 50px;
      text-decoration: none;
      font-weight: 600;
      box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
      display: flex;
      align-items: center;
      gap: 10px;
      transition: all 0.3s;
      z-index: 1000;
      cursor: pointer;
      border: none;
      font-size: 16px;
    }

    .download-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 15px 40px rgba(102, 126, 234, 0.5);
    }

    @media print {
      .download-btn {
        display: none;
      }
    }

    @media (max-width: 768px) {
      .header h1 {
        font-size: 32px;
      }

      .content {
        padding: 30px 20px;
      }

      .skills-grid {
        grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Header -->
    <div class="header">
      <% if (user.profileImage) { %>
        <img src="<%= user.profileImage %>" alt="Profile" class="profile-img">
      <% } else { %>
        <div class="profile-img" style="background: rgba(255,255,255,0.3); display: flex; align-items: center; justify-content: center; font-size: 60px;">
          <i class="fas fa-user"></i>
        </div>
      <% } %>

      <h1><%= user.fullname %></h1>
      <p class="bio"><%= user.bio %></p>

      <div class="contact-links">
        <% if (user.email) { %>
          <a href="mailto:<%= user.email %>"><i class="fas fa-envelope"></i> <%= user.email %></a>
        <% } %>
        <% if (user.phone) { %>
          <a href="tel:<%= user.phone %>"><i class="fas fa-phone"></i> <%= user.phone %></a>
        <% } %>
        <% if (user.github) { %>
          <a href="<%= user.github %>" target="_blank"><i class="fab fa-github"></i> GitHub</a>
        <% } %>
        <% if (user.linkedin) { %>
          <a href="<%= user.linkedin %>" target="_blank"><i class="fab fa-linkedin"></i> LinkedIn</a>
        <% } %>
      </div>
    </div>

    <!-- Content -->
    <div class="content">
      <!-- Education -->
      <% if (user.degree || (user.education10 && user.education10.length) || (user.education12 && user.education12.length)) { %>
        <div class="section">
          <h2 class="section-title"><i class="fas fa-graduation-cap"></i> Education</h2>
          
          <% if (user.degree) { %>
            <div class="edu-card">
              <h3><%= user.degree %><% if (user.branch) { %> in <%= user.branch %><% } %></h3>
              <p><strong><%= user.university %></strong></p>
              <% if (user.cgpa) { %><p>CGPA: <%= user.cgpa %></p><% } %>
              <% if (user.year) { %><p>Year: <%= user.year %></p><% } %>
            </div>
          <% } %>

          <% if (user.education12 && user.education12[0] && user.education12[0].institute) { %>
            <div class="edu-card">
              <h3>12th Standard</h3>
              <p><strong><%= user.education12[0].institute %></strong></p>
              <p>Score: <%= user.education12[0].score %> | Year: <%= user.education12[0].year %></p>
            </div>
          <% } %>

          <% if (user.education10 && user.education10[0] && user.education10[0].institute) { %>
            <div class="edu-card">
              <h3>10th Standard</h3>
              <p><strong><%= user.education10[0].institute %></strong></p>
              <p>Score: <%= user.education10[0].score %> | Year: <%= user.education10[0].year %></p>
            </div>
          <% } %>
        </div>
      <% } %>

      <!-- Skills -->
      <% if (user.skills && user.skills.length > 0 && user.skills[0].name) { %>
        <div class="section">
          <h2 class="section-title"><i class="fas fa-code"></i> Skills</h2>
          <div class="skills-grid">
            <% user.skills.forEach(skill => { %>
              <% if (skill.name) { %>
                <div class="skill-tag"><%= skill.name %></div>
              <% } %>
            <% }) %>
          </div>
        </div>
      <% } %>

      <!-- Projects -->
      <% if (user.projects && user.projects.length > 0 && user.projects[0].title) { %>
        <div class="section">
          <h2 class="section-title"><i class="fas fa-laptop-code"></i> Projects</h2>
          <% user.projects.forEach(project => { %>
            <% if (project.title) { %>
              <div class="project-card">
                <h3><%= project.title %></h3>
                <p><%= project.description %></p>
                <% if (project.link) { %>
                  <a href="<%= project.link %>" target="_blank" class="project-link">
                    <i class="fas fa-external-link-alt"></i> View Project
                  </a>
                <% } %>
              </div>
            <% } %>
          <% }) %>
        </div>
      <% } %>
    </div>

    <!-- Footer -->
    <div class="footer">
      <p>Â© <%= new Date().getFullYear() %> <%= user.fullname %>. All rights reserved.</p>
      <p>
        <a href="/profile"><i class="fas fa-edit"></i> Edit Profile</a>
        <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
      </p>
    </div>
  </div>

  <!-- Download PDF Button -->
  <button class="download-btn" onclick="downloadPDF()">
    <i class="fas fa-download"></i>
    Download PDF
  </button>

  <script>
    function downloadPDF() {
      const element = document.querySelector('.container');
      const username = '<%= user.fullname %>';
      const filename = username.replace(/\s+/g, '_') + '_Portfolio.pdf';
      
      const opt = {
        margin: 0,
        filename: filename,
        image: { type: 'jpeg', quality: 0.98 },
        html2canvas: { scale: 2, useCORS: true },
        jsPDF: { unit: 'in', format: 'a4', orientation: 'portrait' }
      };
      
      // Hide download button temporarily
      const btn = document.querySelector('.download-btn');
      btn.style.display = 'none';
      
      html2pdf().set(opt).from(element).save().then(() => {
        btn.style.display = 'flex';
      });
    }
  </script>
</body>
</html>
