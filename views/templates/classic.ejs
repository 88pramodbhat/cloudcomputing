<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user.fullname %> - Resume</title>
  <link href="https://fonts.googleapis.com/css2?family=Times+New+Roman&family=Georgia&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: Georgia, 'Times New Roman', serif;
      background: #f5f5f5;
      padding: 40px 20px;
      color: #333;
    }

    .container {
      max-width: 900px;
      margin: 0 auto;
      background: white;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    /* Header */
    .header {
      background: #2c3e50;
      color: white;
      padding: 50px 40px;
      text-align: center;
      border-bottom: 5px solid #34495e;
    }

    .profile-img {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      border: 4px solid white;
      object-fit: cover;
      margin-bottom: 20px;
    }

    .header h1 {
      font-size: 38px;
      font-weight: 700;
      margin-bottom: 10px;
      letter-spacing: 2px;
      text-transform: uppercase;
    }

    .header .bio {
      font-size: 16px;
      opacity: 0.9;
      margin-bottom: 25px;
      font-style: italic;
    }

    .contact-bar {
      display: flex;
      justify-content: center;
      gap: 30px;
      flex-wrap: wrap;
      font-size: 14px;
    }

    .contact-bar a {
      color: white;
      text-decoration: none;
    }

    .contact-bar a:hover {
      text-decoration: underline;
    }

    /* Content */
    .content {
      padding: 40px;
    }

    .section {
      margin-bottom: 40px;
      padding-bottom: 30px;
      border-bottom: 2px solid #ecf0f1;
    }

    .section:last-child {
      border-bottom: none;
    }

    .section-title {
      font-size: 24px;
      font-weight: 700;
      color: #2c3e50;
      margin-bottom: 20px;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    /* Education */
    .edu-item {
      margin-bottom: 25px;
    }

    .edu-item h3 {
      font-size: 18px;
      color: #2c3e50;
      margin-bottom: 5px;
    }

    .edu-item p {
      color: #555;
      line-height: 1.6;
    }

    .edu-meta {
      color: #7f8c8d;
      font-size: 14px;
      margin-top: 5px;
    }

    /* Skills */
    .skills-list {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
    }

    .skill-item {
      background: #ecf0f1;
      color: #2c3e50;
      padding: 8px 16px;
      border-radius: 5px;
      font-size: 14px;
      font-weight: 600;
    }

    /* Projects */
    .project-item {
      margin-bottom: 25px;
    }

    .project-item h3 {
      font-size: 18px;
      color: #2c3e50;
      margin-bottom: 10px;
    }

    .project-item p {
      color: #555;
      line-height: 1.6;
      margin-bottom: 10px;
    }

    .project-link {
      color: #2c3e50;
      text-decoration: none;
      font-weight: 600;
      border-bottom: 2px solid #2c3e50;
    }

    .project-link:hover {
      color: #34495e;
    }

    /* Footer */
    .footer {
      background: #2c3e50;
      color: white;
      padding: 20px;
      text-align: center;
      font-size: 14px;
    }

    .footer a {
      color: white;
      text-decoration: none;
      margin: 0 15px;
    }

    .footer a:hover {
      text-decoration: underline;
    }

    /* Download Button */
    .download-btn {
      position: fixed;
      bottom: 30px;
      right: 30px;
      background: #2c3e50;
      color: white;
      padding: 15px 30px;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 700;
      box-shadow: 0 8px 20px rgba(44, 62, 80, 0.4);
      display: flex;
      align-items: center;
      gap: 10px;
      transition: all 0.3s;
      z-index: 1000;
      cursor: pointer;
      border: none;
      font-size: 16px;
      font-family: Georgia, 'Times New Roman', serif;
    }

    .download-btn:hover {
      background: #34495e;
      transform: translateY(-3px);
      box-shadow: 0 12px 25px rgba(44, 62, 80, 0.5);
    }

    @media print {
      body {
        padding: 0;
        background: white;
      }
      .footer a {
        display: none;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Header -->
    <div class="header">
      <% if (user.profileImage) { %>
        <img src="<%= user.profileImage %>" alt="Profile" class="profile-img">
      <% } %>

      <h1><%= user.fullname %></h1>
      <p class="bio"><%= user.bio %></p>

      <div class="contact-bar">
        <% if (user.email) { %><a href="mailto:<%= user.email %>"><i class="fas fa-envelope"></i> <%= user.email %></a><% } %>
        <% if (user.phone) { %><span><i class="fas fa-phone"></i> <%= user.phone %></span><% } %>
        <% if (user.github) { %><a href="<%= user.github %>" target="_blank"><i class="fab fa-github"></i> GitHub</a><% } %>
        <% if (user.linkedin) { %><a href="<%= user.linkedin %>" target="_blank"><i class="fab fa-linkedin"></i> LinkedIn</a><% } %>
      </div>
    </div>

    <!-- Content -->
    <div class="content">
      <!-- Education -->
      <% if (user.degree || (user.education10 && user.education10.length) || (user.education12 && user.education12.length)) { %>
        <div class="section">
          <h2 class="section-title">Education</h2>
          
          <% if (user.degree) { %>
            <div class="edu-item">
              <h3><%= user.degree %><% if (user.branch) { %> - <%= user.branch %><% } %></h3>
              <p><strong><%= user.university %></strong></p>
              <p class="edu-meta">
                <% if (user.cgpa) { %>CGPA: <%= user.cgpa %> | <% } %>
                <% if (user.year) { %>Graduation Year: <%= user.year %><% } %>
              </p>
            </div>
          <% } %>

          <% if (user.education12 && user.education12[0] && user.education12[0].institute) { %>
            <div class="edu-item">
              <h3>Higher Secondary (12th)</h3>
              <p><strong><%= user.education12[0].institute %></strong></p>
              <p class="edu-meta">Score: <%= user.education12[0].score %> | Year: <%= user.education12[0].year %></p>
            </div>
          <% } %>

          <% if (user.education10 && user.education10[0] && user.education10[0].institute) { %>
            <div class="edu-item">
              <h3>Secondary (10th)</h3>
              <p><strong><%= user.education10[0].institute %></strong></p>
              <p class="edu-meta">Score: <%= user.education10[0].score %> | Year: <%= user.education10[0].year %></p>
            </div>
          <% } %>
        </div>
      <% } %>

      <!-- Skills -->
      <% if (user.skills && user.skills.length > 0 && user.skills[0].name) { %>
        <div class="section">
          <h2 class="section-title">Skills</h2>
          <div class="skills-list">
            <% user.skills.forEach(skill => { %>
              <% if (skill.name) { %>
                <span class="skill-item"><%= skill.name %></span>
              <% } %>
            <% }) %>
          </div>
        </div>
      <% } %>

      <!-- Projects -->
      <% if (user.projects && user.projects.length > 0 && user.projects[0].title) { %>
        <div class="section">
          <h2 class="section-title">Projects</h2>
          <% user.projects.forEach(project => { %>
            <% if (project.title) { %>
              <div class="project-item">
                <h3><%= project.title %></h3>
                <p><%= project.description %></p>
                <% if (project.link) { %>
                  <a href="<%= project.link %>" target="_blank" class="project-link">View Project →</a>
                <% } %>
              </div>
            <% } %>
          <% }) %>
        </div>
      <% } %>
    </div>

    <!-- Footer -->
    <div class="footer">
      <p>© <%= new Date().getFullYear() %> <%= user.fullname %></p>
      <p>
        <a href="/profile">Edit Profile</a> |
        <a href="/logout">Logout</a>
      </p>
    </div>
  </div>

  <!-- Download PDF Button -->
  <button class="download-btn" onclick="downloadPDF()">
    <i class="fas fa-download"></i>
    Download PDF
  </button>

  <script>
    function downloadPDF() {
      const element = document.querySelector('.container');
      const username = '<%= user.fullname %>';
      const filename = username.replace(/\s+/g, '_') + '_Resume.pdf';
      
      const opt = {
        margin: 0.5,
        filename: filename,
        image: { type: 'jpeg', quality: 0.98 },
        html2canvas: { scale: 2, useCORS: true },
        jsPDF: { unit: 'in', format: 'a4', orientation: 'portrait' }
      };
      
      const btn = document.querySelector('.download-btn');
      btn.style.display = 'none';
      
      html2pdf().set(opt).from(element).save().then(() => {
        btn.style.display = 'flex';
      });
    }
  </script>
</body>
</html>
