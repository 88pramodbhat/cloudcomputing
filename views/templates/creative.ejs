<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user.fullname %> - Creative Portfolio</title>
  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Nunito', sans-serif;
      background: linear-gradient(45deg, #ff6b6b, #f59e0b, #10b981, #3b82f6, #8b5cf6);
      background-size: 400% 400%;
      animation: gradient 15s ease infinite;
      min-height: 100vh;
      padding: 30px 15px;
    }

    @keyframes gradient {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
    }

    /* Header Card */
    .header-card {
      background: white;
      border-radius: 30px;
      padding: 50px;
      margin-bottom: 30px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .header-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 5px;
      background: linear-gradient(90deg, #ff6b6b, #f59e0b, #10b981, #3b82f6, #8b5cf6);
    }

    .profile-img {
      width: 180px;
      height: 180px;
      border-radius: 30px;
      border: 5px solid transparent;
      background: linear-gradient(white, white) padding-box,
                  linear-gradient(45deg, #ff6b6b, #8b5cf6) border-box;
      object-fit: cover;
      margin-bottom: 25px;
      transform: rotate(-5deg);
      transition: transform 0.3s;
    }

    .profile-img:hover {
      transform: rotate(0deg) scale(1.05);
    }

    .header-card h1 {
      font-size: 48px;
      font-weight: 800;
      background: linear-gradient(45deg, #ff6b6b, #8b5cf6);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 15px;
    }

    .header-card .bio {
      font-size: 18px;
      color: #555;
      margin-bottom: 30px;
      line-height: 1.6;
    }

    .social-icons {
      display: flex;
      justify-content: center;
      gap: 15px;
      flex-wrap: wrap;
    }

    .social-icon {
      width: 50px;
      height: 50px;
      border-radius: 15px;
      display: flex;
      align-items: center;
      justify-content: center;
      text-decoration: none;
      color: white;
      font-size: 20px;
      transition: transform 0.3s;
    }

    .social-icon:hover {
      transform: translateY(-5px);
    }

    .social-icon.email { background: linear-gradient(135deg, #ff6b6b, #ff8e8e); }
    .social-icon.phone { background: linear-gradient(135deg, #10b981, #34d399); }
    .social-icon.github { background: linear-gradient(135deg, #333, #666); }
    .social-icon.linkedin { background: linear-gradient(135deg, #0077b5, #00a0dc); }

    /* Content Cards */
    .content-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .card {
      background: white;
      border-radius: 25px;
      padding: 40px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
      position: relative;
    }

    .card-title {
      font-size: 32px;
      font-weight: 700;
      margin-bottom: 30px;
      display: flex;
      align-items: center;
      gap: 15px;
    }

    .card-title i {
      width: 50px;
      height: 50px;
      border-radius: 15px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 24px;
      color: white;
    }

    .card-title.education i { background: linear-gradient(135deg, #3b82f6, #8b5cf6); }
    .card-title.skills i { background: linear-gradient(135deg, #10b981, #34d399); }
    .card-title.projects i { background: linear-gradient(135deg, #f59e0b, #fbbf24); }

    /* Education Items */
    .edu-item {
      background: linear-gradient(135deg, #eff6ff, #f3f4f6);
      padding: 25px;
      border-radius: 20px;
      margin-bottom: 20px;
      border-left: 5px solid #3b82f6;
    }

    .edu-item h3 {
      color: #1e40af;
      font-size: 20px;
      margin-bottom: 8px;
    }

    .edu-item p {
      color: #555;
      margin: 5px 0;
    }

    /* Skills */
    .skills-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
      gap: 15px;
    }

    .skill-badge {
      padding: 15px 20px;
      border-radius: 20px;
      text-align: center;
      font-weight: 700;
      color: white;
      position: relative;
      overflow: hidden;
    }

    .skill-badge:nth-child(4n+1) { background: linear-gradient(135deg, #ff6b6b, #ff8e8e); }
    .skill-badge:nth-child(4n+2) { background: linear-gradient(135deg, #10b981, #34d399); }
    .skill-badge:nth-child(4n+3) { background: linear-gradient(135deg, #3b82f6, #60a5fa); }
    .skill-badge:nth-child(4n+4) { background: linear-gradient(135deg, #8b5cf6, #a78bfa); }

    /* Projects */
    .project-item {
      background: linear-gradient(135deg, #fff7ed, #fef3c7);
      padding: 30px;
      border-radius: 20px;
      margin-bottom: 20px;
      border-left: 5px solid #f59e0b;
      transition: transform 0.3s;
    }

    .project-item:hover {
      transform: translateX(10px);
    }

    .project-item h3 {
      color: #92400e;
      font-size: 22px;
      margin-bottom: 12px;
    }

    .project-item p {
      color: #78350f;
      line-height: 1.6;
      margin-bottom: 15px;
    }

    .project-link {
      display: inline-block;
      background: linear-gradient(135deg, #f59e0b, #fbbf24);
      color: white;
      padding: 10px 25px;
      border-radius: 15px;
      text-decoration: none;
      font-weight: 700;
      transition: transform 0.3s;
    }

    .project-link:hover {
      transform: scale(1.05);
    }

    /* Footer */
    .footer {
      background: white;
      border-radius: 25px;
      padding: 30px;
      margin-top: 30px;
      text-align: center;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

    .footer a {
      color: #8b5cf6;
      text-decoration: none;
      font-weight: 700;
      margin: 0 15px;
    }

    /* Download Button */
    .download-btn {
      position: fixed;
      bottom: 30px;
      right: 30px;
      background: linear-gradient(135deg, #ff6b6b, #8b5cf6);
      color: white;
      padding: 15px 30px;
      border-radius: 50px;
      text-decoration: none;
      font-weight: 700;
      box-shadow: 0 10px 30px rgba(139, 92, 246, 0.5);
      display: flex;
      align-items: center;
      gap: 10px;
      transition: all 0.3s;
      z-index: 1000;
      cursor: pointer;
      border: none;
      font-size: 16px;
      font-family: 'Nunito', sans-serif;
    }

    .download-btn:hover {
      transform: translateY(-3px) scale(1.05);
      box-shadow: 0 15px 40px rgba(139, 92, 246, 0.6);
    }

    @media (max-width: 768px) {
      .header-card {
        padding: 30px 20px;
      }

      .header-card h1 {
        font-size: 32px;
      }

      .skills-grid {
        grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Header -->
    <div class="header-card">
      <% if (user.profileImage) { %>
        <img src="<%= user.profileImage %>" alt="Profile" class="profile-img">
      <% } else { %>
        <div class="profile-img" style="display: flex; align-items: center; justify-content: center; background: linear-gradient(45deg, #ff6b6b, #8b5cf6); font-size: 70px; color: white;">
          <i class="fas fa-user"></i>
        </div>
      <% } %>

      <h1><%= user.fullname %></h1>
      <p class="bio"><%= user.bio %></p>

      <div class="social-icons">
        <% if (user.email) { %><a href="mailto:<%= user.email %>" class="social-icon email"><i class="fas fa-envelope"></i></a><% } %>
        <% if (user.phone) { %><a href="tel:<%= user.phone %>" class="social-icon phone"><i class="fas fa-phone"></i></a><% } %>
        <% if (user.github) { %><a href="<%= user.github %>" target="_blank" class="social-icon github"><i class="fab fa-github"></i></a><% } %>
        <% if (user.linkedin) { %><a href="<%= user.linkedin %>" target="_blank" class="social-icon linkedin"><i class="fab fa-linkedin"></i></a><% } %>
      </div>
    </div>

    <div class="content-grid">
      <!-- Education -->
      <% if (user.degree || (user.education10 && user.education10.length) || (user.education12 && user.education12.length)) { %>
        <div class="card">
          <h2 class="card-title education"><i class="fas fa-graduation-cap"></i>Education</h2>
          
          <% if (user.degree) { %>
            <div class="edu-item">
              <h3><%= user.degree %><% if (user.branch) { %> - <%= user.branch %><% } %></h3>
              <p><strong><%= user.university %></strong></p>
              <% if (user.cgpa) { %><p>CGPA: <%= user.cgpa %></p><% } %>
              <% if (user.year) { %><p>Year: <%= user.year %></p><% } %>
            </div>
          <% } %>

          <% if (user.education12 && user.education12[0] && user.education12[0].institute) { %>
            <div class="edu-item">
              <h3>12th Standard</h3>
              <p><strong><%= user.education12[0].institute %></strong></p>
              <p><%= user.education12[0].score %> • <%= user.education12[0].year %></p>
            </div>
          <% } %>

          <% if (user.education10 && user.education10[0] && user.education10[0].institute) { %>
            <div class="edu-item">
              <h3>10th Standard</h3>
              <p><strong><%= user.education10[0].institute %></strong></p>
              <p><%= user.education10[0].score %> • <%= user.education10[0].year %></p>
            </div>
          <% } %>
        </div>
      <% } %>

      <!-- Skills -->
      <% if (user.skills && user.skills.length > 0 && user.skills[0].name) { %>
        <div class="card">
          <h2 class="card-title skills"><i class="fas fa-code"></i>Skills</h2>
          <div class="skills-grid">
            <% user.skills.forEach(skill => { %>
              <% if (skill.name) { %>
                <div class="skill-badge"><%= skill.name %></div>
              <% } %>
            <% }) %>
          </div>
        </div>
      <% } %>

      <!-- Projects -->
      <% if (user.projects && user.projects.length > 0 && user.projects[0].title) { %>
        <div class="card">
          <h2 class="card-title projects"><i class="fas fa-laptop-code"></i>Projects</h2>
          <% user.projects.forEach(project => { %>
            <% if (project.title) { %>
              <div class="project-item">
                <h3><%= project.title %></h3>
                <p><%= project.description %></p>
                <% if (project.link) { %>
                  <a href="<%= project.link %>" target="_blank" class="project-link">
                    <i class="fas fa-external-link-alt"></i> View Project
                  </a>
                <% } %>
              </div>
            <% } %>
          <% }) %>
        </div>
      <% } %>
    </div>

    <!-- Footer -->
    <div class="footer">
      <p style="color: #666; margin-bottom: 10px;">✨ © <%= new Date().getFullYear() %> <%= user.fullname %> ✨</p>
      <p>
        <a href="/profile"><i class="fas fa-edit"></i> Edit</a>
        <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
      </p>
    </div>
  </div>

  <!-- Download PDF Button -->
  <button class="download-btn" onclick="downloadPDF()">
    <i class="fas fa-download"></i>
    Download PDF
  </button>

  <script>
    function downloadPDF() {
      const element = document.querySelector('.container');
      const username = '<%= user.fullname %>';
      const filename = username.replace(/\s+/g, '_') + '_Creative_Portfolio.pdf';
      
      const opt = {
        margin: 0,
        filename: filename,
        image: { type: 'jpeg', quality: 0.98 },
        html2canvas: { scale: 2, useCORS: true },
        jsPDF: { unit: 'in', format: 'a4', orientation: 'portrait' }
      };
      
      const btn = document.querySelector('.download-btn');
      btn.style.display = 'none';
      
      html2pdf().set(opt).from(element).save().then(() => {
        btn.style.display = 'flex';
      });
    }
  </script>
</body>
</html>
