<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Build Your Portfolio</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      padding: 20px;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      background: white;
      border-radius: 20px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      overflow: hidden;
    }

    /* Header */
    .header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      padding: 30px 40px;
      color: white;
    }

    .header h1 {
      font-size: 32px;
      font-weight: 700;
      margin-bottom: 10px;
    }

    .header p {
      font-size: 16px;
      opacity: 0.9;
    }

    .nav-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .nav-links a {
      color: white;
      text-decoration: none;
      margin-left: 20px;
      font-weight: 500;
      transition: opacity 0.3s;
    }

    .nav-links a:hover {
      opacity: 0.8;
    }

    /* Flash Messages */
    .flash-message {
      margin: 20px 40px;
      padding: 15px 20px;
      border-radius: 10px;
      font-weight: 500;
    }

    .flash-success {
      background: #d4edda;
      color: #155724;
      border: 1px solid #c3e6cb;
    }

    .flash-error {
      background: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
    }

    /* Form Container */
    .form-container {
      padding: 40px;
    }

    /* Template Selection */
    .template-section {
      margin-bottom: 40px;
    }

    .template-section h2 {
      font-size: 24px;
      font-weight: 600;
      color: #333;
      margin-bottom: 20px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .template-section h2 i {
      color: #667eea;
    }

    .template-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .template-card {
      position: relative;
      border: 3px solid #e0e0e0;
      border-radius: 15px;
      padding: 25px;
      cursor: pointer;
      transition: all 0.3s ease;
      text-align: center;
    }

    .template-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    .template-card input[type="radio"] {
      position: absolute;
      opacity: 0;
    }

    .template-card input[type="radio"]:checked + label {
      border-color: #667eea;
      background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
    }

    .template-card label {
      cursor: pointer;
      display: block;
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
      border-radius: 15px;
      transition: all 0.3s;
    }

    .template-icon {
      font-size: 48px;
      margin-bottom: 15px;
    }

    .template-name {
      font-size: 18px;
      font-weight: 600;
      color: #333;
      margin-bottom: 8px;
    }

    .template-desc {
      font-size: 13px;
      color: #666;
    }

    .checkmark {
      position: absolute;
      top: 15px;
      right: 15px;
      width: 30px;
      height: 30px;
      background: #667eea;
      border-radius: 50%;
      display: none;
      align-items: center;
      justify-content: center;
      color: white;
    }

    .template-card input[type="radio"]:checked ~ .checkmark {
      display: flex;
    }

    /* Section Styling */
    .section {
      margin-bottom: 40px;
    }

    .section h3 {
      font-size: 20px;
      font-weight: 600;
      color: #333;
      margin-bottom: 20px;
      padding-bottom: 10px;
      border-bottom: 2px solid #667eea;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .section h3 i {
      color: #667eea;
    }

    /* Form Fields */
    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      display: block;
      font-weight: 500;
      color: #555;
      margin-bottom: 8px;
      font-size: 14px;
    }

    input[type="text"],
    input[type="email"],
    input[type="file"],
    textarea {
      width: 100%;
      padding: 12px 16px;
      border: 2px solid #e0e0e0;
      border-radius: 10px;
      font-size: 14px;
      font-family: 'Inter', sans-serif;
      transition: all 0.3s;
    }

    input[type="text"]:focus,
    input[type="email"]:focus,
    textarea:focus {
      outline: none;
      border-color: #667eea;
      box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    input[readonly] {
      background: #f5f5f5;
      cursor: not-allowed;
    }

    textarea {
      resize: vertical;
      min-height: 100px;
    }

    /* Grid Layout */
    .form-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
    }

    /* Dynamic Fields */
    .dynamic-group {
      background: #f9f9f9;
      padding: 20px;
      border-radius: 10px;
      margin-bottom: 15px;
      border: 1px solid #e0e0e0;
    }

    .btn {
      padding: 12px 24px;
      border: none;
      border-radius: 10px;
      font-size: 15px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s;
      display: inline-flex;
      align-items: center;
      gap: 8px;
    }

    .btn-primary {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
    }

    .btn-secondary {
      background: #f0f0f0;
      color: #333;
    }

    .btn-secondary:hover {
      background: #e0e0e0;
    }

    .btn-add {
      background: #10b981;
      color: white;
      margin-top: 10px;
    }

    .btn-add:hover {
      background: #059669;
    }

    .submit-section {
      margin-top: 40px;
      padding-top: 30px;
      border-top: 2px solid #e0e0e0;
      text-align: center;
    }

    .submit-btn {
      padding: 16px 48px;
      font-size: 18px;
    }

    /* File Upload Styling */
    .file-upload-wrapper {
      position: relative;
      overflow: hidden;
      display: inline-block;
      width: 100%;
    }

    .file-upload-wrapper input[type=file] {
      font-size: 14px;
      cursor: pointer;
    }

    .current-image {
      margin-top: 10px;
      padding: 10px;
      background: #f0f7ff;
      border-radius: 8px;
      font-size: 13px;
      color: #0066cc;
    }

    .current-image a {
      color: #667eea;
      font-weight: 600;
      text-decoration: none;
    }

    .current-image a:hover {
      text-decoration: underline;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .header h1 {
        font-size: 24px;
      }

      .form-container {
        padding: 20px;
      }

      .template-grid {
        grid-template-columns: 1fr;
      }

      .form-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>

  <div class="container">
    <!-- Header -->
    <div class="header">
      <div class="nav-bar">
        <div>
          <a href="/" style="color: white; text-decoration: none; font-weight: 600;"><i class="fas fa-home"></i> Home</a>
          <% if (locals.currentUser) { %>
            <span style="margin-left: 20px;">ðŸ‘‹ Welcome, <%= currentUser.name %>!</span>
          <% } %>
        </div>
        <div class="nav-links">
          <% if (user && user.fullname) { %>
            <a href="/preview"><i class="fas fa-eye"></i> Preview</a>
          <% } %>
          <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </div>
      </div>
      
      <h1><i class="fas fa-palette"></i> Build Your Portfolio</h1>
      <p>Create a stunning professional portfolio with our beautiful templates</p>
    </div>

    <!-- Flash Messages -->
    <% if (success && success.length > 0) { %>
      <div class="flash-message flash-success">
        <i class="fas fa-check-circle"></i> <%= success %>
      </div>
    <% } %>

    <% if (error && error.length > 0) { %>
      <div class="flash-message flash-error">
        <i class="fas fa-exclamation-circle"></i> <%= error %>
      </div>
    <% } %>

    <form action="/profile" method="POST" enctype="multipart/form-data">
      <div class="form-container">
        
        <!-- TEMPLATE SELECTION -->
        <div class="template-section">
          <h2><i class="fas fa-th-large"></i> Choose Your Template</h2>
          <div class="template-grid">
            <!-- Modern Template -->
            <div class="template-card">
              <input type="radio" id="modern" name="template" value="modern" <%= user && user.template === 'modern' ? 'checked' : (!user || !user.template ? 'checked' : '') %>>
              <label for="modern"></label>
              <div class="template-icon" style="color: #667eea;">
                <i class="fas fa-rocket"></i>
              </div>
              <div class="template-name">Modern</div>
              <div class="template-desc">Clean & professional design with gradient accents</div>
              <div class="checkmark"><i class="fas fa-check"></i></div>
            </div>

            <!-- Classic Template -->
            <div class="template-card">
              <input type="radio" id="classic" name="template" value="classic" <%= user && user.template === 'classic' ? 'checked' : '' %>>
              <label for="classic"></label>
              <div class="template-icon" style="color: #059669;">
                <i class="fas fa-briefcase"></i>
              </div>
              <div class="template-name">Classic</div>
              <div class="template-desc">Traditional layout perfect for corporate roles</div>
              <div class="checkmark"><i class="fas fa-check"></i></div>
            </div>

            <!-- Creative Template -->
            <div class="template-card">
              <input type="radio" id="creative" name="template" value="creative" <%= user && user.template === 'creative' ? 'checked' : '' %>>
              <label for="creative"></label>
              <div class="template-icon" style="color: #f59e0b;">
                <i class="fas fa-paint-brush"></i>
              </div>
              <div class="template-name">Creative</div>
              <div class="template-desc">Bold & artistic for designers & creatives</div>
              <div class="checkmark"><i class="fas fa-check"></i></div>
            </div>

            <!-- Minimal Template -->
            <div class="template-card">
              <input type="radio" id="minimal" name="template" value="minimal" <%= user && user.template === 'minimal' ? 'checked' : '' %>>
              <label for="minimal"></label>
              <div class="template-icon" style="color: #6366f1;">
                <i class="fas fa-feather"></i>
              </div>
              <div class="template-name">Minimal</div>
              <div class="template-desc">Simple & elegant, content-focused</div>
              <div class="checkmark"><i class="fas fa-check"></i></div>
            </div>
          </div>
        </div>

        <!-- PERSONAL INFO -->
        <div class="section">
          <h3><i class="fas fa-user"></i> Personal Information</h3>
          
          <div class="form-grid">
            <div class="form-group">
              <label>Full Name *</label>
              <input type="text" name="fullname" placeholder="John Doe" value="<%= user ? user.fullname : '' %>" required>
            </div>

            <div class="form-group">
              <label>Email Address *</label>
              <input type="email" name="email" placeholder="john@example.com" value="<%= user ? user.email : '' %>" required readonly>
            </div>
          </div>

          <div class="form-group">
            <label>Bio *</label>
            <textarea name="bio" placeholder="Tell us about yourself in 2-3 lines..." required><%= user ? user.bio : '' %></textarea>
          </div>

          <div class="form-group">
            <label><i class="fas fa-camera"></i> Upload Profile Photo</label>
            <div class="file-upload-wrapper">
              <input type="file" name="profileImage" accept="image/*">
            </div>
            <% if (user && user.profileImage) { %>
              <div class="current-image">
                <i class="fas fa-image"></i> Current: <a href="<%= user.profileImage %>" target="_blank">View Image</a>
              </div>
            <% } %>
          </div>

          <div class="form-grid">
            <div class="form-group">
              <label><i class="fas fa-phone"></i> Phone Number</label>
              <input type="tel" name="phone" placeholder="1234567890" value="<%= user ? user.phone : '' %>" maxlength="10" pattern="\d{10}" title="Please enter exactly 10 digits" oninput="this.value = this.value.replace(/[^0-9]/g, '');">
            </div>

            <div class="form-group">
              <label><i class="fab fa-github"></i> GitHub URL</label>
              <input type="text" name="github" placeholder="https://github.com/username" value="<%= user ? user.github : '' %>">
            </div>
          </div>

          <div class="form-group">
            <label><i class="fab fa-linkedin"></i> LinkedIn URL</label>
            <input type="text" name="linkedin" placeholder="https://linkedin.com/in/username" value="<%= user ? user.linkedin : '' %>">
          </div>
        </div>


        <!-- EDUCATION -->
        <div class="section">
          <h3><i class="fas fa-graduation-cap"></i> Education</h3>
          
          <div class="form-grid">
            <div class="form-group">
              <label>Degree</label>
              <input type="text" name="degree" placeholder="B.Tech, BCA, etc." value="<%= user ? user.degree : '' %>">
            </div>

            <div class="form-group">
              <label>Branch</label>
              <input type="text" name="branch" placeholder="CSE, ECE, etc." value="<%= user ? user.branch : '' %>">
            </div>
          </div>

          <div class="form-group">
            <label>University / College Name</label>
            <input type="text" name="university" placeholder="University name" value="<%= user ? user.university : '' %>">
          </div>

          <div class="form-grid">
            <div class="form-group">
              <label>CGPA</label>
              <input type="text" name="cgpa" placeholder="8.5" value="<%= user ? user.cgpa : '' %>">
            </div>

            <div class="form-group">
              <label>Passing Year</label>
              <input type="text" name="year" placeholder="2024" value="<%= user ? user.year : '' %>">
            </div>
          </div>

          <div class="dynamic-group">
            <h4 style="margin-bottom: 15px; color: #555;"><i class="fas fa-school"></i> 10th Standard</h4>
            <div class="form-grid">
              <div class="form-group">
                <label>Institute Name</label>
                <input type="text" name="edu_institute10" placeholder="School name" value="<%= user && user.education10 && user.education10[0] ? user.education10[0].institute : '' %>">
              </div>
              <div class="form-group">
                <label>Year</label>
                <input type="text" name="edu_year10" placeholder="2018" value="<%= user && user.education10 && user.education10[0] ? user.education10[0].year : '' %>">
              </div>
              <div class="form-group">
                <label>Percentage</label>
                <input type="text" name="edu_score10" placeholder="85%" value="<%= user && user.education10 && user.education10[0] ? user.education10[0].score : '' %>">
              </div>
            </div>
          </div>

          <div class="dynamic-group">
            <h4 style="margin-bottom: 15px; color: #555;"><i class="fas fa-school"></i> 12th Standard</h4>
            <div class="form-grid">
              <div class="form-group">
                <label>Institute Name</label>
                <input type="text" name="edu_institute12" placeholder="School name" value="<%= user && user.education12 && user.education12[0] ? user.education12[0].institute : '' %>">
              </div>
              <div class="form-group">
                <label>Year</label>
                <input type="text" name="edu_year12" placeholder="2020" value="<%= user && user.education12 && user.education12[0] ? user.education12[0].year : '' %>">
              </div>
              <div class="form-group">
                <label>Percentage</label>
                <input type="text" name="edu_score12" placeholder="90%" value="<%= user && user.education12 && user.education12[0] ? user.education12[0].score : '' %>">
              </div>
            </div>
          </div>
        </div>



        <!-- SKILLS -->
        <div class="section">
          <h3><i class="fas fa-code"></i> Skills</h3>
          
          <div id="skills-container">
            <% if (user && user.skills && user.skills.length > 0) { %>
              <% user.skills.forEach((skill, index) => { %>
                <div class="form-group">
                  <input type="text" name="skill_name" placeholder="e.g., JavaScript, Python, React" value="<%= skill.name %>">
                </div>
              <% }) %>
            <% } else { %>
              <div class="form-group">
                <input type="text" name="skill_name" placeholder="e.g., JavaScript, Python, React">
              </div>
            <% } %>
          </div>

          <button type="button" class="btn btn-add" onclick="addSkill()">
            <i class="fas fa-plus"></i> Add Another Skill
          </button>
        </div>

        <script>
        function addSkill() {
          let container = document.getElementById("skills-container");
          let div = document.createElement("div");
          div.classList.add("form-group");
          div.innerHTML = `<input type="text" name="skill_name" placeholder="e.g., JavaScript, Python, React">`;
          container.appendChild(div);
        }
        </script>


    <!-- PROJECTS -->
    <h2>Projects</h2>

<div id="project-container">
  <% if (user && user.projects && user.projects.length > 0) { %>
    <% user.projects.forEach((project, index) => { %>
      <div class="project-group">
        <input type="text" name="project_title" placeholder="Project Title" value="<%= project.title %>">
        <textarea name="project_description" rows="3" placeholder="Project Description"><%= project.description %></textarea>
        <input type="text" name="project_link" placeholder="Project Link (GitHub or Live)" value="<%= project.link %>">
        <% if (index > 0) { %><hr><% } %>
      </div>
    <% }) %>
  <% } else { %>
    <div class="project-group">
      <input type="text" name="project_title" placeholder="Project Title">
      <textarea name="project_description" rows="3" placeholder="Project Description"></textarea>
      <input type="text" name="project_link" placeholder="Project Link (GitHub or Live)">
    </div>
  <% } %>
</div>

<button type="button" onclick="addProject()">+ Add Another Project</button>

<script>
function addProject() {
  let div = document.createElement("div");
  div.classList.add("project-group");

  div.innerHTML = `
    <input type="text" name="project_title" placeholder="Project Title">
    <textarea name="project_description" rows="3" placeholder="Project Description"></textarea>
    <input type="text" name="project_link" placeholder="Project Link (GitHub or Live)">
    <hr>
  `;
  document.getElementById("project-container").appendChild(div);
}
</script>
    <button type="submit">Submit Profile</button> 

  </form>

</body>
</html>
